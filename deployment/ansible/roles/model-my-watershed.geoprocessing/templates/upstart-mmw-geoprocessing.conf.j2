description	"mmw-geoprocessing"

{% if ['development', 'test'] | some_are_in(group_names) -%}
start on (vagrant-mounted)
{% else %}
start on (local-filesystems and net-device-up IFACE!=lo)
{% endif %}
stop on shutdown

respawn
setuid mmw

exec envdir /etc/mmw.d/env spark-submit {{ geop_home }}/services/target/scala-2.10/mmw-services-assembly-0.0.1.jar >> {{ geoprocessing_log }} 2>&1
